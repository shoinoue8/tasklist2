<div class='row'>
  <div class='col-sm-4'>
    <%= form_with(model: task, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class='form-group'>  
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content %>
      </div>
        
      <div class='form-group'>  
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status %>
      </div>
        
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>